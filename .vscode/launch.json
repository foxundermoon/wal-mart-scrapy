    "version": "0.2.0",
    "configurations": [
        {
            "name": "Scrapy",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            "pythonPath": "${config:python.pythonPath}",
            "program": "/usr/local/bin/scrapy",
            "cwd": "${workspaceRoot}",
            "args": [
                "crawl",
                "walmart"
                // ,
                // "-o",
                // "bikes.json"
            ],
            "console": "integratedTerminal",
            "env": {},
            "envFile": "${workspaceRoot}/.env",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit"
            ]
        }
    ]
}